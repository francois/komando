<h2>Confirm Invitation</h2>
<%= form_for @user, :url => invitation_url(@user.token) do |f| %>
  <div class="row">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="row">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= submit_tag "Confirm Invitation Request" %>
<% end %>
